<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LessonScreenActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50px">
            <TextView
                android:id="@+id/tv_header"
                android:layout_width="450px"
                android:layout_height="70px"
                android:textSize="10pt"
                android:paddingTop="3px"
                android:paddingLeft="40px"
                android:layout_gravity="center"
                android:fontFamily="Arial"
                android:textColor="#3F48CC"
                android:text=""
                android:textStyle="bold">
            </TextView>
            <Button
                android:layout_width="150px"
                android:layout_height="50px"
                android:id="@+id/btnExit"
                android:text="@string/quit"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="6pt"
                android:background="#7D3FCC"
                android:textColor="#F0F0F0"
                android:textAlignment="center"
                android:onClick="exitLesson"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px">
        </LinearLayout>
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="600px"
            android:layout_height="500px"
            android:layout_gravity="center"
            android:fontFamily="Arial"
            android:text="Boolean Logic"
            android:paddingLeft="30px"
            android:textSize="9pt"
            android:textColor="#000000">
        </TextView>
        <LinearLayout
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="10px">
        </LinearLayout>
        <ImageView
            android:id="@+id/table"
            android:visibility="invisible"
            android:src="@drawable/table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            </ImageView>
        <LinearLayout
            android:id="@+id/space_down"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="50px">
        </LinearLayout>
        <Button
            android:id="@+id/btnNext"
            android:layout_height="wrap_content"
            android:layout_width="300px"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingRight="7dp"
            android:text="Next"
            android:layout_alignParentRight="true"
            android:onClick="nextQuestion"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false"
            android:background="@drawable/curved_button_background2"
            android:layout_marginRight="5dp"
            android:textColor="#F0F0F0"
            android:textSize="8pt">
        </Button>
    </LinearLayout>
</RelativeLayout>
