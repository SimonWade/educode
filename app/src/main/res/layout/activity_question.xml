<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".QuestionActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50px">
            <TextView
                android:layout_width="450px"
                android:layout_height="60px"
                android:textSize="10pt"
                android:paddingTop="3px"
                android:paddingLeft="40px"
                android:layout_gravity="center"
                android:fontFamily="Arial"
                android:text="@string/question"
                android:textColor="#3F48CC"
                android:textStyle="bold">
            </TextView>
            <Button
                android:layout_width="150px"
                android:layout_height="50px"
                android:id="@+id/btnExit"
                android:text="@string/quit"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="6pt"
                android:background="#7D3FCC"
                android:textColor="#F0F0F0"
                android:textAlignment="center"
                android:onClick="exitTest"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px">
        </LinearLayout>
        <TextView
            android:id="@+id/tv_question"
            android:layout_width="600px"
            android:layout_height="255px"
            android:layout_gravity="center"
            android:fontFamily="Arial"
            android:text="Testing"
            android:paddingLeft="40px"
            android:textSize="7pt"
            android:textColor="#000000">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20px">
        </LinearLayout>
        <Button
            android:id="@+id/btnAnswerOne"
            android:layout_height="wrap_content"
            android:layout_width="500px"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingRight="7dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:onClick="ButtonOnClick"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false"
            android:background="@drawable/curved_button_background"
            android:layout_marginRight="3dp"
            android:textColor="#F0F0F0"
            android:textSize="7pt">
        </Button>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30px">
        </LinearLayout>
        <Button
            android:id="@+id/btnAnswerTwo"
            android:layout_height="wrap_content"
            android:layout_width="500px"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingRight="7dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false"
            android:onClick="ButtonOnClick"
            android:background="@drawable/curved_button_background3"
            android:layout_marginRight="3dp"
            android:textColor="#F0F0F0"
            android:textSize="7pt">
        </Button>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30px">
        </LinearLayout>
        <Button
            android:id="@+id/btnAnswerThree"
            android:layout_height="wrap_content"
            android:layout_width="500px"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingRight="7dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false"
            android:onClick="ButtonOnClick"
            android:background="@drawable/curved_button_background2"
            android:layout_marginRight="3dp"
            android:textColor="#F0F0F0"
            android:textSize="7pt">
        </Button>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30px">
        </LinearLayout>
        <Button
            android:id="@+id/btnAnswerFour"
            android:layout_height="wrap_content"
            android:layout_width="500px"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingRight="7dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true"
            android:onClick="ButtonOnClick"
            android:textAllCaps="false"
            android:background="@drawable/curved_button_background"
            android:layout_marginRight="3dp"
            android:textColor="#F0F0F0"
            android:textSize="7pt">
        </Button>
    </LinearLayout>


</RelativeLayout>
